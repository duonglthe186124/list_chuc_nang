<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>transactionServlet</servlet-name>
        <servlet-class>controller.transactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewTransactionServlet</servlet-name>
        <servlet-class>controller.viewTransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createPurchaseOrderServlet</servlet-name>
        <servlet-class>controller.createPurchaseOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createReceiptServlet</servlet-name>
        <servlet-class>controller.createReceiptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>controller.productController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchProductController</servlet-name>
        <servlet-class>controller.searchProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orderListController</servlet-name>
        <servlet-class>controller.orderListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>orderProduct</servlet-name>
        <servlet-class>controller.orderProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateOrderController</servlet-name>
        <servlet-class>controller.CreateOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>transactionServlet</servlet-name>
        <url-pattern>/inbound/transactions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewTransactionServlet</servlet-name>
        <url-pattern>/inbound/transactions/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createPurchaseOrderServlet</servlet-name>
        <url-pattern>/inbound/createpo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createReceiptServlet</servlet-name>
        <url-pattern>/inbound/create-receipt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchProductController</servlet-name>
        <url-pattern>/products/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orderListController</servlet-name>
        <url-pattern>/order/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>orderProduct</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateOrderController</servlet-name>
        <url-pattern>/process/order</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
