<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_servlet</servlet-name>
        <servlet-class>controller.login_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createPurchaseOrderServlet</servlet-name>
        <servlet-class>controller.createPurchaseOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createReceiptServlet</servlet-name>
        <servlet-class>controller.createReceiptServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginCheck</servlet-name>
        <servlet-class>controller.login_servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>controller.products</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productSearch</servlet-name>
        <servlet-class>controller.Product_search_filter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderProduct</servlet-name>
        <servlet-class>controller.OrderProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderList</servlet-name>
        <servlet-class>controller.OrderLists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>transactionServlet</servlet-name>
        <servlet-class>controller.transactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewTransactionServlet</servlet-name>
        <servlet-class>controller.viewTransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InventoryController</servlet-name>
        <servlet-class>controller.InventoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InboundController</servlet-name>
        <servlet-class>controller.InboundController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuditController</servlet-name>
        <servlet-class>controller.AuditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QualityController</servlet-name>
        <servlet-class>controller.QualityController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterController</servlet-name>
        <servlet-class>controller.FilterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createPurchaseOrderServlet</servlet-name>
        <url-pattern>/inbound/createpo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createReceiptServlet</servlet-name>
        <url-pattern>/inbound/create-receipt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/registerStaff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_servlet</servlet-name>
        <url-pattern>/loginStaff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginCheck</servlet-name>
        <url-pattern>/loginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productSearch</servlet-name>
        <url-pattern>/products/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderProduct</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderList</servlet-name>
        <url-pattern>/order/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>transactionServlet</servlet-name>
        <url-pattern>/inbound/transaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewTransactionServlet</servlet-name>
        <url-pattern>/inbound/transaction/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InboundController</servlet-name>
        <url-pattern>/InboundController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuditController</servlet-name>
        <url-pattern>/AuditController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QualityController</servlet-name>
        <url-pattern>/QualityController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterController</servlet-name>
        <url-pattern>/FilterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InventoryController</servlet-name>
        <url-pattern>/InventoryController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
